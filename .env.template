# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=email_service_db

# Microsoft Graph API credentials
TENANT_ID=your_tenant_id
CLIENT_ID=your_client_id
CLIENT_SECRET=your_client_secret
USER_EMAIL=your_outlook_email@outlook.com

# The redirect URI registered in your Azure app
REDIRECT_URI=http://localhost:8000/callback

# Service configuration
EMAIL_FETCH_INTERVAL_MINUTES=60  # How often to fetch emails (in minutes)
EMAIL_FETCH_HOURS=24             # How far back to look for emails (in hours)
EMAIL_BATCH_SIZE=50              # Number of emails to process per batch
EMAIL_MAX_RETRIES=3              # Maximum number of retries for API calls
EMAIL_RETRIEVE_ATTACHMENTS=True  # Whether to retrieve attachment metadata
EMAIL_RETRIEVE_BODY=True         # Whether to retrieve full email body

# API Configuration
GRAPH_API_VERSION=v1.0
GRAPH_API_ENDPOINT=https://graph.microsoft.com

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# CORS
CORS_ORIGINS=*  # Comma-separated list of allowed origins